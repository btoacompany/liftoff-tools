<div id="wrapper">
<div id="contents">
  <h3 class="c_align">Update Shop Info</h3>
  <%= form_tag( "/shops/edit_action", method: "post" ) do %>
  <input type="hidden" name="id" value="<%= params[:id] %>" />
  <table class="center">
      <tr>
	<td>Shop Name: </td>
	<td><input type="text" value="<%= @shops.name %>" name="name" /></td>
      </tr>
      <tr>
	<td>Shop URL: </td>
	<td><input type="text" value="<%= @shops.url %>" name="url" width="200"/></td>
      </tr>
      <tr>
	<td class="btn r_align" colspan="2">
	  <input type="submit" value="Update" class="btn" />
	</td>
      </tr>	
  </table>
  <% end %>
</div> <!-- contents -->
</div> <!-- wrapper -->
