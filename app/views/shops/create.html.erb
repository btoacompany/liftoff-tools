<div id="wrapper">
<div id="contents">
  <h3 class="l_align">Create New Shop</h3>
  <%= form_tag( "/shops/create_action", method: "post" ) do %>
  <table>
      <tr>
	<td>Shop Name: </td>
	<td><input type="text" value="" name="name" placeholder="Enter shop name here"/></td>
      </tr>
      <tr>
	<td>Shop URL: </td>
	<td><input type="text" value="" name="url" placeholder="Enter shop url here" width="200"/></td>
      </tr>
      <tr>
	<td class="btn r_align" colspan="2">
	  <input type="submit" value="Submit" />
	</td>
      </td>	
  </table>
  <% end %>
</div> <!-- contents -->
</div> <!-- wrapper -->
