<div id="wrapper">
<div id="contents">
<a href="/items/create">Add new item</a>
<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Edit</th>
  </tr>
  <% @items.each do | item | %>
    <tr>
      <td><%= item[:id] %></td>
      <td><%= item[:name] %></td>
      <td><a href="/items/<%= item[:id] %>/edit">edit</a></td>
    </tr>
  <% end %>
</table>

</div> <!-- contents -->
</div> <!-- wrapper -->
